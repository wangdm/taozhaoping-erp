		select
		<include refid="Base_Column_List" />
		from T_SALES_ORDER_BOM
		<include refid="where" />
	</select>

	<select id="list" resultMap="T_SalesOrderBom" parameterType="SalesOrderBom">
		select
		<include refid="Base_Column_List" />
		from T_SALES_ORDER_BOM
